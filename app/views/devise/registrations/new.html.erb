<div id="page-contents">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="contact-us" style="margin-top: 0px;">
          <div class="row">
            <div class="col-md-8 col-sm-7">
              <h4 class="grey">Kayıt Ol</h4>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "contact-form" }) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <i class="icon ion-person"></i>
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "İsim *", required: "required" %>
                </div>
                <div class="form-group">
                  <i class="icon ion-person"></i>
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Soyisim *", required: "required" %>
                </div>
                <div class="form-group">
                  <i class="icon ion-email"></i>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email *", required: "required" %>
                </div>
                <div class="form-group">
                  <i class="icon ion-android-call"></i>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Şifre" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>
                <div class="form-group">
                  <i class="icon ion-android-call"></i>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Şifre Tekrar" %>
                </div>
                <button class="btn-primary">Kaydet</button>

                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
