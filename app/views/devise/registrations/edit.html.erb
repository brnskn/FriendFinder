<div id="page-contents">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="contact-us" style="margin-top: 0px;">
          <div class="row">
            <div class="col-md-8 col-sm-7">
              <h4 class="grey">Düzenle</h4>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "contact-form" }) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <i class="icon ion-person"></i>
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "İsim *", required: "required" %>
                </div>
                <div class="form-group">
                  <i class="icon ion-person"></i>
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Soyisim *", required: "required" %>

                </div>
                <div class="form-group">
                  <i class="icon ion-email"></i>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email *", required: "required" %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                </div>
                <div class="form-group">
                  <i class="icon ion-android-call"></i>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Şifre" %>
                  <% if @minimum_password_length %>
                  <em>(minimum <%= @minimum_password_length %> karakter)</em>
                  <% end %><br />
                </div>
                <div class="form-group">
                  <i class="icon ion-android-call"></i>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Şifre Tekrar" %>
                </div>
                <div class="form-group">
                  <i class="icon ion-email"></i>
                  <%= f.password_field :current_password, autofocus: "off", class: "form-control", placeholder: "Mevcut Şifreniz", required: "required" %>
                </div>

                <button type="submit" class="btn-primary">Kaydet</button>
              <% end %>
              <h3>Hesabımı sil</h3>

              <p>Mutsuz musun? <%= button_to "Hesabımı sil", registration_path(resource_name), data: { confirm: "Emin misin?" }, method: :delete, class: "btn btn-primary" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
